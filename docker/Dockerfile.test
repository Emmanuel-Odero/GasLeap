# Simple test-focused Dockerfile
FROM rust:1.82-slim

# Install minimal dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy source code
COPY . .

# Default command
CMD ["cargo", "test", "-p", "pallet-sponsorship", "--verbose"]