# GasLeap Environment Variables Template
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
DEMO_MODE=true
PRE_FUNDED_POOLS=true

# Logging
RUST_LOG=info
LOG_LEVEL=info

# =============================================================================
# GASLEAP NODE CONFIGURATION
# =============================================================================

# Substrate Node Settings
GASLEAP_NODE_URL=ws://localhost:9944
GASLEAP_NODE_HTTP_URL=http://localhost:9933
GASLEAP_CHAIN_SPEC=dev
GASLEAP_BASE_PATH=/tmp/gasleap-dev

# Parachain Configuration
PARA_ID=1000
RELAY_CHAIN=rococo-local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Settings
DATABASE_URL=postgresql://gasleap:gasleap123@localhost:5432/gasleap
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gasleap
POSTGRES_USER=gasleap
POSTGRES_PASSWORD=gasleap123

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cache Settings
CACHE_TTL=300
SESSION_TTL=3600

# =============================================================================
# API BACKEND CONFIGURATION
# =============================================================================

# API Server Settings
API_PORT=3003
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:3003

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Settings (if implementing authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Settings
REACT_APP_GASLEAP_ENDPOINT=ws://localhost:9944
REACT_APP_API_ENDPOINT=http://localhost:3003
REACT_APP_DEMO_MODE=true
REACT_APP_NETWORK_NAME=GasLeap Development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_TRACING=false

# External Services
REACT_APP_ASTAR_ENDPOINT=ws://localhost:9945
REACT_APP_ACALA_ENDPOINT=ws://localhost:9946

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email Templates
EMAIL_FROM=noreply@gasleap.dev
EMAIL_REPLY_TO=support@gasleap.dev

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_RETRY_ATTEMPTS=3

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Jaeger Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=gasleap-api
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_KEY_HEADER=X-API-Key
API_KEY=your-api-key-change-this
RATE_LIMIT_ENABLED=true

# HTTPS Settings (for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Content Security Policy
CSP_ENABLED=false
CSP_REPORT_URI=

# =============================================================================
# PARACHAIN INTEGRATION
# =============================================================================

# Astar Configuration
ASTAR_ENDPOINT=ws://localhost:9945
ASTAR_CHAIN_ID=1000
ASTAR_ENABLED=true

# Acala Configuration
ACALA_ENDPOINT=ws://localhost:9946
ACALA_CHAIN_ID=2000
ACALA_ENABLED=true

# Mock Parachain
MOCK_PARACHAIN_ENDPOINT=ws://localhost:9948
MOCK_PARACHAIN_ENABLED=true

# XCM Configuration
XCM_VERSION=3
XCM_MAX_WEIGHT=1000000000
XCM_FEE_MULTIPLIER=1.1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@gasleap.dev
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_LISTEN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# MailHog Configuration
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Settings
COMPOSE_PROJECT_NAME=gasleap
COMPOSE_FILE=docker-compose.yml

# Volume Paths
DATA_VOLUME_PATH=./data
POSTGRES_VOLUME_PATH=./data/postgres
REDIS_VOLUME_PATH=./data/redis

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://gasleap:gasleap123@localhost:5433/gasleap_test
TEST_REDIS_URL=redis://localhost:6380

# Test Settings
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE_THRESHOLD=80

# =============================================================================
# ANALYTICS & METRICS
# =============================================================================

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000

# Gas Savings Tracking
GAS_SAVINGS_UPDATE_INTERVAL=5000
GAS_SAVINGS_CACHE_TTL=300

# Pool Analytics
POOL_ANALYTICS_ENABLED=true
POOL_ANALYTICS_AGGREGATION_INTERVAL=3600000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
FEATURE_SPONSORSHIP_ENABLED=true
FEATURE_CROSS_CHAIN_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Experimental Features
FEATURE_ADVANCED_AUTH=false
FEATURE_GOVERNANCE=false
FEATURE_STAKING=false

# Demo Features
FEATURE_DEMO_POOLS=true
FEATURE_MOCK_TRANSACTIONS=true
FEATURE_AUTO_FUNDING=true