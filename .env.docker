# GasLeap Docker Environment Variables
# Used by docker-compose.yml for containerized development

# =============================================================================
# DOCKER NETWORK CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
DEMO_MODE=true
PRE_FUNDED_POOLS=true

# Logging
RUST_LOG=info
LOG_LEVEL=info

# =============================================================================
# CONTAINER SERVICE URLS (Docker Internal Network)
# =============================================================================

# GasLeap Node (Docker internal)
GASLEAP_NODE_URL=ws://gasleap-node:9944
GASLEAP_NODE_HTTP_URL=http://gasleap-node:9933

# Database (Docker internal)
DATABASE_URL=postgresql://gasleap:gasleap123@postgres-db:5432/gasleap
POSTGRES_HOST=postgres-db
POSTGRES_PORT=5432
POSTGRES_DB=gasleap
POSTGRES_USER=gasleap
POSTGRES_PASSWORD=gasleap123

# Redis (Docker internal)
REDIS_URL=redis://redis-cache:6379
REDIS_HOST=redis-cache
REDIS_PORT=6379

# API Backend (Docker internal)
API_PORT=3003
API_HOST=0.0.0.0
API_BASE_URL=http://api-server:3003

# =============================================================================
# FRONTEND CONFIGURATION (Docker)
# =============================================================================

# React App Settings (External access)
REACT_APP_GASLEAP_ENDPOINT=ws://localhost:9944
REACT_APP_API_ENDPOINT=http://localhost:3003
REACT_APP_DEMO_MODE=true
REACT_APP_NETWORK_NAME=GasLeap Docker

# External Parachain Endpoints
REACT_APP_ASTAR_ENDPOINT=ws://localhost:9945
REACT_APP_ACALA_ENDPOINT=ws://localhost:9946

# Development Settings
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# =============================================================================
# EMAIL CONFIGURATION (Docker)
# =============================================================================

# MailHog (Docker internal)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

EMAIL_FROM=noreply@gasleap.dev
EMAIL_REPLY_TO=support@gasleap.dev
ENABLE_EMAIL_NOTIFICATIONS=true

# =============================================================================
# MONITORING (Docker)
# =============================================================================

# Jaeger (Docker internal)
JAEGER_ENDPOINT=http://jaeger-tracing:14268/api/traces
JAEGER_SERVICE_NAME=gasleap-api
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# PARACHAIN INTEGRATION (Docker)
# =============================================================================

# Parachain Endpoints (Docker internal)
ASTAR_ENDPOINT=ws://astar-local:9944
ACALA_ENDPOINT=ws://acala-local:9944
MOCK_PARACHAIN_ENDPOINT=ws://mock-target-parachain:9944

# Chain Configuration
ASTAR_CHAIN_ID=1000
ACALA_CHAIN_ID=2000
PARA_ID=1000
RELAY_CHAIN=rococo-local

# =============================================================================
# DEVELOPMENT TOOLS (Docker)
# =============================================================================

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@gasleap.dev
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_LISTEN_PORT=80

# Redis Commander
REDIS_HOSTS=local:redis-cache:6379

# =============================================================================
# SECURITY & PERFORMANCE (Docker)
# =============================================================================

# CORS (Allow frontend container)
CORS_ORIGIN=http://frontend:3000,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL=300
SESSION_TTL=3600

# =============================================================================
# DOCKER SPECIFIC SETTINGS
# =============================================================================

# Container Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60

# Resource Limits (used by docker-compose)
GASLEAP_NODE_MEMORY=1g
GASLEAP_NODE_CPUS=1.0
API_SERVER_MEMORY=512m
API_SERVER_CPUS=0.5
FRONTEND_MEMORY=512m
FRONTEND_CPUS=0.5

# Volume Mounts
DATA_VOLUME=/data
POSTGRES_DATA_VOLUME=/var/lib/postgresql/data
REDIS_DATA_VOLUME=/data

# =============================================================================
# FEATURE FLAGS (Docker Development)
# =============================================================================

# Core Features
FEATURE_SPONSORSHIP_ENABLED=true
FEATURE_CROSS_CHAIN_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Development Features
FEATURE_DEMO_POOLS=true
FEATURE_MOCK_TRANSACTIONS=true
FEATURE_AUTO_FUNDING=true
FEATURE_DEBUG_LOGGING=true

# Monitoring Features
FEATURE_TRACING_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_HEALTH_CHECKS=true